      STATE_DIRECTORY=${STATE_ROOT}/var/state/sorcery
       DEPENDS_STATUS=${STATE_DIRECTORY}/depends
  UNCOMMITTED_DEPENDS=${STATE_DIRECTORY}/uncommitted
    ABANDONED_DEPENDS=${STATE_DIRECTORY}/abandoned
